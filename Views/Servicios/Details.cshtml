@model EntreEspeciesNuevo.Models.Servicio

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body{
        display:flex;
    }
</style>
<h1>Detalle</h1>

<div>
    <h4>Servicio</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre del Servicio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomServico)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-info " asp-action="Edit" asp-route-id="@Model?.IdServicio">Editar</a> |
    <a class="btn btn-cancel" asp-action="Index">Regresar</a>
</div>
